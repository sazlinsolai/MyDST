<div data-role="page" 
     <%= (defined? html_id and !html_id.blank?) ? "id=#{html_id}" : ""  %>
     <%= (defined? html_class and !html_class.blank?) ? "id=#{html_class}" : ""  %>
     >
  <% if content_for?(:header) %>
    <%= yield :header %>
  <% else %>
    <%= render :partial=>'layouts/page_header', :locals => {:title => title} %>
  <% end %>

  <div data-role="content" data-scroll="true">
  	<%= yield %>
  </div>
  
  <% if content_for?(:footer) %>
  	<%= yield :footer %>
  <% else %>
  	<%=  render :partial=>'layouts/page_footer' %>
  <% end %>
</div>